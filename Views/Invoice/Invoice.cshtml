@model pos_system.ViewModels.TransactionDetailsViewModel

@{
    ViewData["Title"] = "Invoice";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }
        .invoice-container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .invoice-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .invoice-header h1 {
            font-size: 2rem;
            margin: 0;
        }
        .invoice-header img {
            margin-top: 10px;
        }
        .transaction-details {
            margin-bottom: 20px;
        }
        .transaction-details p {
            margin: 0;
            font-size: 1rem;
        }
        .table {
            margin-bottom: 20px;
        }
        .table th, .table td {
            text-align: center;
        }
        .invoice-summary {
            text-align: right;
            font-size: 1rem;
        }
        .invoice-summary p {
            margin: 0;
        }
        .invoice-summary p strong {
            display: inline-block;
            width: 150px;
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <!-- Invoice Header -->
        <div class="invoice-header">
            <h1>Invoice</h1>
            <img src="~/css/ArcticLogo.png" alt="Arctic Logo" style="width: 100px; height: auto;">
        </div>

        <!-- Transaction Details -->
        <div class="transaction-details">
            <p><strong>Transaction Number:</strong> @Model.TransactionNumber</p>
            <p><strong>Cashier:</strong> @Model.CashierName</p>
            <p><strong>Transaction Date:</strong> @Model.TransactionDate.ToString("MMMM dd, yyyy HH:mm")</p>
        </div>

        <!-- Products Table -->
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Quantity</td>
                        <td>@product.Amount.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Invoice Summary -->
        <div class="invoice-summary">
            <p><strong>Subtotal:</strong> @Model.Subtotal.ToString("C")</p>
            <p><strong>Tax:</strong> @Model.Tax.ToString("C")</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
        </div>
    </div>
</body>
</html>
