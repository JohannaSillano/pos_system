@model IEnumerable<pos_system.Models.Transaction>
@{
    ViewData["Title"] = "POS";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h2 class="text-center">Transactions</h2>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Date</th>
                <th>Total Amount</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var transaction in Model)
                {
                    <tr>
                        <td>@transaction.Id</td>
                        <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                        <td>₱@transaction.TotalAmount.ToString("N2")</td>
                        <td>
                            <button class="btn btn-primary" onclick="showModal('@transaction.Id', '@transaction.TransactionDate', '@transaction.Subtotal', '@transaction.Tax', '@transaction.TotalAmount')">View</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="4">No transactions available.</td></tr>
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div>
        <div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal-title">Transaction Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p><strong>Transaction ID:</strong> <span id="modal-transaction-id"></span></p>
                        <p><strong>Transaction Date:</strong> <span id="modal-transaction-date"></span></p>
                        <hr />
                        <p><strong>Product1</strong></p>
                        <!-- products list -->
                        <hr />
                        <p><strong>Subtotal:</strong> ₱<span id="modal-subtotal"></span></p>
                        <p><strong>Tax:</strong> ₱<span id="modal-tax"></span></p>
                        <p><strong>Total Amount:</strong> ₱<span id="modal-total"></span></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/showModal.js"></script>
</body>
</html>
