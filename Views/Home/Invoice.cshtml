@model IEnumerable<pos_system.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Receipt Label -->
            <div class="col-6 text-start">
                <label style="font-size: 70px;">Receipt</label>
            </div>
            <!-- Logo -->
            <div class="col-6 text-end">
                <img src="~/css/ArcticLogo.png" alt="Logo" class="img-fluid" style="max-height: 100px;">
            </div>
        </div>
        <hr>
    </div>

    <div class="container mt-4">
        <div class="row">Receipt Number: TRN-@Model.FirstOrDefault()?.TransactionNumber</div>
        <div class="row">Cashier: @Model.FirstOrDefault()?.TransactionDate</div>
        <div class="row">Date of Purchase: @Model.FirstOrDefault()?.TransactionDate.ToString("MM/dd/yyyy")</div>
    </div>


    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>

</html>
        <table class="table table-striped mt-5">
            <thead>
                <tr>
                    <th scope="col-3">Item</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Unit Price</th>
                    <th scope="col">Amount</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>